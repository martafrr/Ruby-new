<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@project.errors.count, "error") %> ha(n) impedit guardar aquest projecte:</h2>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title, "Títol" %><br>
	<%= f.text_field :title %>

	<br>
	<br>

	<%= f.label :description, "Descripció" %><br>
	<%= f.text_area :description %>
	
	<br>
	<br>

	<%= f.label :link %><br>
	<%= f.text_field :link %>

	<br>
	<br>

	<%= f.submit "Crea un projecte" %>

<% end %>